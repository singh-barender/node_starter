<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td bgcolor="#ffffff" align="center" style="padding: 20px 30px 60px 30px">
      <table border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td align="center" style="border-radius: 3px">
            <p>We have received a request to reset your password.</p>
            <p style="margin-bottom: 20px">Click the button below to reset your password:</p>
          </td>
        </tr>
        <tr>
          <td align="center" style="border-radius: 3px" bgcolor="#FFA73B">
            <a
              href="<%= resetPasswordURL %>"
              target="_blank"
              style="
                font-size: 20px;
                font-family: Helvetica, Arial, sans-serif;
                color: #ffffff;
                text-decoration: none;
                padding: 15px 25px;
                border-radius: 2px;
                border: 1px solid #ffa73b;
                display: inline-block;
              "
              >Reset Password</a
            >
          </td>
        </tr>
        <tr>
          <td align="center" style="border-radius: 3px">
            <p style="margin-top: 20px">If you did not request a password reset, please ignore this email.</p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
